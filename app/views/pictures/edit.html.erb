<h1>Edit Picture #<%= @picture.id %></h1>

<%= form_tag "http://localhost:3000/pictures/#{@picture.id}", method: "patch" do %>
  <label for="source">Source URL:</label>
  <input id="source" type="text" name="source" value="<%= @picture.source %>">

  <label for="caption">Caption:</label>
  <input id="caption" type="text" name="caption" value="<%= @picture.caption %>">

  <input type="submit">
<% end %>
